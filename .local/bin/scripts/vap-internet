#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active

case $BUTTON in
	1) st -e nmtui ;;
	3) notify-send "ðŸŒ Internet module" "\- Click to connect
ï€  : wifi disabled
î½   : no wifi connection
ï€’   : wifi connection with quality
ï‚¬  : no ethernet
î½„  : ethernet working
ó°–‚  : vpn is active
" ;;
esac

# Ethernet
if [[ "$(cat /sys/class/net/e*/operstate 2>/dev/null)" = "up" ]]; then
    ethericon=" ^B9^^C0^   î½„    ^B1^  Connected"

# Wifi
else
    if [ "$(cat /sys/class/net/wlan1/operstate 2>/dev/null)" = 'up' ] ; then
        wifiicon="$(awk '/^\s*w/ { print " ^B9^^C0^   ï€’    ^B1^  ", int($3 * 100 / 70) "%" }' /proc/net/wireless)"
    elif [ "$(cat /sys/class/net/wlan1/operstate 2>/dev/null)" = 'down' ] ; then
        [ "$(cat /sys/class/net/wlan1/flags 2>/dev/null)" = '0x1003' ] && wifiicon=" ^B9^^C0^   î½    ^d^^B1^  Not Connected" || wifiicon="ï‘§  "
    fi
fi

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon=" ^B9^^C0^   ó°–‚    ^d^^B1^  Vpn"

printf "%s%s%s\n" "$wifiicon$ethericon $tunicon"
