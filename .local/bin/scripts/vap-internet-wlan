#!/bin/sh

# Show wifi 📶 and percent strength or 📡 if none.
# Show 🌐 if connected to ethernet or ❎ if none.
# Show 🔒 if a vpn connection is active

case $BUTTON in
	1) st -e nmtui ;;
	3) notify-send "🌐 Internet module" "\- Click to connect
  : wifi disabled
  : no wifi connection
   : wifi connection with quality
  : no ethernet
  : ethernet working
󰖂  : vpn is active
" ;;
esac

# Wifi
if [ "$(cat /sys/class/net/wlp0s*/operstate 2>/dev/null)" = 'up' ] ; then
	wifiicon="$(awk '/^\s*w/ { print " ^B14^^C0^      ^d^^C14^  ", int($3 * 100 / 70) "%" }' /proc/net/wireless)"
elif [ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'down' ] ; then
	[ "$(cat /sys/class/net/w*/flags 2>/dev/null)" = '0x1003' ] && wifiicon=" ^B14^^C0^     ^d^^C14^  Not Connected" || wifiicon="  "
fi

# TUN
[ -n "$(cat /sys/class/net/tun*/operstate 2>/dev/null)" ] && tunicon=" ^B14^^C0^    󰖂    ^d^^C14^  Vpn"

printf "%s%s%s\n" "$wifiicon$ethericon$tunicon"
